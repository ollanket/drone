  "dependencies": {
    "@pgtyped/cli": "^0.13.0",
    "@pgtyped/query": "^0.13.0",
    "@types/cors": "^2.8.12",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "multer": "^1.4.4",
    "swagger-ui-express": "^4.3.0",
    "tsoa": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.31",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "eslint-plugin-jest": "^26.1.5",
    "jest": "^28.0.3",
    "nodemon": "^2.0.16",
    "pg": "^8.7.3",
    "pgtools": "^0.3.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.1",
    "ts-node": "^10.7.0"
  },
  "scripts": {
    "build": "tsoa spec-and-routes && tsc --project tsconfig.build.json",
    "start": "node build/src/server.js",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "test:up": "docker compose -f docker-compose.testing.yml up -d",
    "test:down": "docker compose -f docker-compose.testing.yml down",
    "pg:watch": "pgtyped -w -c pgtyped.config.json",
    "test:reset": "ts-node scripts/reset-testdb.ts",
    "test:seed": "ts-node scripts/seed-testdb.ts",
    "test": "yarn test:reset && yarn test:seed && jest -i",
    "test:coverage": "yarn test:reset && yarn test:seed && jest -i --coverage"
  }
}
